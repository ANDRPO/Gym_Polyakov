<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B02E70BE"
    android:orientation="vertical"
    tools:context=".Step1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/astroneer"
        android:text="Step 4/5"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/astroneer"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="How often do you exercise?"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/step4_newbie"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:background="@drawable/custom_step">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newbie"
            android:fontFamily="@font/astroneer"
            android:textSize="24sp"
            android:textColor="#6E9CD2"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just getting started"
            android:fontFamily="@font/astroneer"
            android:textSize="18sp"
            android:textColor="#6E9CD2"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/step4_keep_on"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@drawable/custom_step">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep on"
            android:fontFamily="@font/astroneer"
            android:textSize="24sp"
            android:textColor="#6E9CD2"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-2 times a week"
            android:fontFamily="@font/astroneer"
            android:textSize="18sp"
            android:textColor="#6E9CD2"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/step4_advanced"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@drawable/custom_step">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:fontFamily="@font/astroneer"
            android:textSize="24sp"
            android:textColor="#6E9CD2"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More than 3 times a week"
            android:fontFamily="@font/astroneer"
            android:textSize="18sp"
            android:textColor="#6E9CD2"
            android:gravity="center" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/button_next_step4"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_step"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/astroneer"
            android:text="Next"
            android:textColor="#6E9CD2"
            android:textSize="24sp" />

    </RelativeLayout>


</LinearLayout>