<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1592E6</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#00FFFFFF</item>
        <item name="android:textCursorDrawable">@color/Black</item>
        <item name="android:fontFamily">@font/astroneer</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#6F9DD2</item>
        <item name="android:fontFamily">@font/astroneer</item>
    </style>

    <style name="SwitchColorsCustom" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#76A1D3</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

</resources>
